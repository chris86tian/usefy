{
  "name": "server",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && npx tsc",
    "start": "npm run build && node dist/index.js",
    "dev": "env-cmd -f .env.dev concurrently \"npx tsc -w\" \"nodemon --exec ts-node src/index.ts\"",
    "deploy:dev": "env-cmd -f .env.dev npm run build && serverless deploy --stage dev",
    "deploy:prod": "env-cmd -f .env.prod npm run build && serverless deploy --stage prod",
    "deploy": "npm run build && serverless deploy",
    "remove": "serverless remove",
    "logs": "serverless logs -f api",
    "offline": "env-cmd -f .env.dev serverless offline --httpPort 8001"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.712.0",
    "@clerk/express": "^1.3.29",
    "aws-sdk": "^2.1692.0",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "dynamoose": "^4.0.2",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "i": "^0.3.7",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.16",
    "npm": "^10.9.2",
    "pluralize": "^8.0.0",
    "resend": "^4.1.2",
    "serverless-http": "^3.2.0",
    "stripe": "^17.4.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.10.2",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.17",
    "@types/pluralize": "^0.0.33",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.1.0",
    "cpx": "^1.5.0",
    "env-cmd": "^10.1.0",
    "nodemon": "^3.1.9",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
